# TMDB API Configuration
# Obtenha sua chave gratuita em: https://www.themoviedb.org/settings/api
TMDB_API_KEY=sua_chave_api_aqui

# MovieLens Dataset
# Baixe em: https://grouplens.org/datasets/movielens/
MOVIELENS_PATH=./data/movielens

# Cache Configuration
ENABLE_CACHE=true
CACHE_DIR=./data/cache
CACHE_EXPIRY_DAYS=7

# API Settings
MAX_MOVIES=100
DEFAULT_LANGUAGE=pt-BR
